<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/main.css" />
  <title>Project Details</title>
</head>
<body class="bg-base-100 text-base-content">
    
    <!-- NavBar -->
    <%- include('partials/navbar', { page: 'projects' }) %>

  <section class="p-10">
    <div class="card bg-base-200 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-3xl"><%= project.title %></h2>
        <p class="text-sm text-gray-500">Sector: <%= project.sector %></p>
        <p class="mt-4"><%= project.intro_short %></p>
        <p class="mt-4 italic text-gray-400"><%= project.impact %></p>
        <a href="<%= project.original_source_url %>" target="_blank" class="link link-primary mt-4">Source</a>
        <button onclick="history.back()" class="btn btn-outline mt-6">⬅ Back</button>
      </div>
    </div>

    <div id="quote" class="text-center mt-10 italic"></div>
  </section>

  <script>
    document.addEventListener("DOMContentLoaded", async () => {
      const res = await fetch("https://dummyjson.com/quotes/random");
      const data = await res.json();
      document.getElementById("quote").innerText = `"${data.quote}" — ${data.author}`;
    });
  </script>
</body>
</html>
